<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udl.bss.barbershopschedule.BarberServicesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

            <Button
                android:id="@+id/barber_new_service_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="@string/barber_new_service_button"
                android:textColor="@color/colorPrimary"
                android:theme="@style/PrimaryAccent"
                />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BACK"
                />

            <ListView
                android:id="@+id/barber_services_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
