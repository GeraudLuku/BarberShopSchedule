<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udl.bss.barbershopschedule.BarberHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">

        <Button
            android:id="@+id/barber_schedule_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/barber_schedule_button"
            android:textColor="@color/colorPrimary"
            android:theme="@style/PrimaryAccent"
            />

        <Button
            android:id="@+id/barber_service_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/barber_service_button"
            android:textColor="@color/colorPrimary"
            android:theme="@style/PrimaryAccent"
            />

        <Button
            android:id="@+id/barber_promotion_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/barber_promotion_button"
            android:textColor="@color/colorPrimary"
            android:theme="@style/PrimaryAccent"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
