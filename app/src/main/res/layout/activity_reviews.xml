<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.udl.bss.barbershopschedule.ReviewsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                card_view:cardBackgroundColor="@color/colorPrimary"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_margin="4dp"
                card_view:cardBackgroundColor="@color/reviewsBackgroundColor"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4sp">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/no_rated_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="50dp">

                    <TextView
                        android:id="@+id/rate_this_barber_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="Valorar ahora a Barber shop 1" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:numStars="5"
                        android:stepSize="1" />

                    <TextView
                        android:id="@+id/rating_explanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/review_cancel_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancelar" />

                        <Button
                            android:id="@+id/review_next_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Siguiente" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/no_rated_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="50dp">

                    <EditText
                        android:id="@+id/user_new_review"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Afegeix la teva valoraciÃ³ per continuar..."/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/review_back_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enrrere" />

                        <Button
                            android:id="@+id/review_upload_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acceptar" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/already_rated_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="50dp">

                    <TextView
                        android:id="@+id/user_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Fugiat do do ad velit eiusmod. Enim deserunt aute consequat et et excepteur enim. Est id et ut anim deserunt anim ea laboris tempor consectetur. Duis eu cillum est eu do duis excepteur ad. Eiusmod ea ea esse tempor cillum occaecat consequat pariatur velit ut tempor. Officia ipsum ipsum esse officia mollit ex id ipsum eu elit culpa est elit." />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/user_rating_bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:isIndicator="true"
                            android:numStars="5" />

                        <TextView
                            android:id="@+id/user_rating_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="27/07/2017" />

                        <ImageView
                            android:id="@+id/edit_user_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/delete_user_review"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_create_black_18dp"
                            android:layout_marginRight="30dp"/>

                        <ImageView
                            android:id="@+id/delete_user_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_clear_black_18dp" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@id/footer"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-50dp"
                android:adjustViewBounds="true"
                android:elevation="5sp"
                android:src="@mipmap/ic_launcher_round" />

        </RelativeLayout>
    </ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reviews_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
