<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udl.bss.barbershopschedule.BarberScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Here will be a CalendarView with all data about appointments."
            android:textSize="15dp"
            android:textAlignment="center"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="2">

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="09:00"
                    android:padding="3dip" />
                <Button
                    android:text="Person 1"
                    android:padding="3dip"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="09:30"
                    android:padding="3dip" />
                <Button
                    android:text="Person 2"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="10:00"
                    android:padding="3dip" />
                <Button
                    android:text="Person 3"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="10:30"
                    android:padding="3dip" />
                <Button
                    android:text="Person 4"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="11:00"
                    android:padding="3dip" />
                <Button
                    android:text="Person 5"
                    android:padding="3dip" />

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="11:30"
                    android:padding="3dip" />
                <Button
                    android:text="Person 6"
                    android:padding="3dip" />

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="12:00"
                    android:padding="3dip" />
                <Button
                    android:text="Person 7"
                    android:padding="3dip" />

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="12:30"
                    android:padding="3dip" />
                <Button
                    android:text="Person 8"
                    android:padding="3dip" />

            </TableRow>

            <Button
                android:id="@+id/btn_back"
                android:text="BACK"
                android:padding="3dip" />
        </TableLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
